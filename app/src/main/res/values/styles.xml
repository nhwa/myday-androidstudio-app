<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
         Customize your theme here.
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent"></item>

        <!--상태바 흰색으로 글씨는 검은색-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PreferncesTheme"  parent="AppTheme">
        <!--상태바 흰색으로 글씨는 검은색-->
        <item name="android:colorBackground">@color/white</item>
    </style>

        //password
        <style name="line">
            <item name="android:background">@drawable/border_bottom</item>
            <item name="android:layout_height">80dp</item>
            <item name="android:gravity">center_vertical</item>
            <item name="android:paddingLeft">16dp</item>
        </style>

        <style name="PasscodeInputIStyle">
            <item name="android:gravity">center</item>
            <item name="android:maxLength">1</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">35sp</item>
            <item name="android:inputType">textPassword|number</item>
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">80dp</item>
            <item name="android:layout_margin">4dp</item>
            <item name="android:layout_weight">1</item>
            <item name="android:singleLine">true</item>
        </style>

        <style name="PasscodeButtonStyle" >
            <item name="android:stateListAnimator">@null</item>
            <item name="android:textSize">25sp</item>
            <item name="android:textColor">#FF464646</item>
            <item name="android:gravity">center</item>
            <item name="android:background">@color/white</item>
            <item name="android:layout_margin">5dp</item>
            <item name="android:layout_width">50dp</item>
            <item name="android:layout_height">80dp</item>
        </style>


</resources>
